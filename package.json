{
  "name": "ProcessingJS",
  "description": "A processing js playgound",
  "author": "Filipe Sabella",
  "repository": "https://github.com/filipesabella/processingJS",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "parcel ./src/main/index.html -d build/",
    "start-dev": "ELECTRON_START_URL=http://localhost:1234 electron .",
    "test": "mocha -r ts-node/register src/test/**.spec.ts",
    "test:watch": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --watch-extensions ts --watch src/test/**/*.spec.ts",
    "build": "parcel build ./src/main/index.html -d build/ --public-url ./ && yarn run build-ts && yarn run build-worker",
    "build-ts": "parcel build node_modules/monaco-editor/esm/vs/language/typescript/ts.worker.js -d build/ --no-source-maps",
    "build-worker": "parcel build node_modules/monaco-editor/esm/vs/editor/editor.worker.js -d build/ --no-source-maps",
    "ship": "yarn run build && cp assets/* build/ && GH_TOKEN=`cat token` build -mwl -p always"
  },
  "build": {
    "appId": "filipesabella.ProcessingJS",
    "mac": {
      "category": "Utility"
    },
    "publish": [{
      "provider": "github",
      "owner": "filipesabella",
      "repo": "processingJS"
    }],
    "files": [
      "main.js",
      "build/*"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "electron": "^5.0.3",
    "electron-builder": "^20.28.4",
    "electron-reload": "^1.2.5",
    "less": "^3.8.1",
    "mocha": "^6.1.4",
    "parcel-bundler": "^1.10.3",
    "ts-node": "^8.2.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "browserslist": "^4.6.2",
    "caniuse-lite": "^1.0.30000974",
    "convert-units": "^2.3.4",
    "electron-updater": "^4.0.6",
    "electron-window-state": "^5.0.2",
    "monaco-editor": "^0.17.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "typeface-roboto-mono": "^0.0.54"
  }
}
